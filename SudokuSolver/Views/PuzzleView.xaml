            </local:SudokuGrid.BackgroundTransition>
            <local:SudokuGrid.Resources>
                <x:Double x:Key="MinorGridStrokeThickness">1</x:Double>
                <x:Double x:Key="MajorGridStrokeThickness">2</x:Double>
                
