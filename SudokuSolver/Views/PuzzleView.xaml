                    <Setter Property="Stroke" Value="{ThemeResource MinorGridStroke}"/>
                    <Setter Property="StrokeThickness" Value="{StaticResource MinorGridStrokeThickness}"/>
                </Style>
                <Style x:Key="MajorGridStyle" TargetType="Line">
                    <Setter Property="Stroke" Value="{ThemeResource MajorGridStroke}"/>
                    <Setter Property="StrokeThickness" Value="{StaticResource MajorGridStrokeThickness}"/>
                </Style>
            </local:SudokuGrid.Resources>
