<UserControl x:Class="SudokuSolver.Views.PossibleTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:SudokuSolver.Views"
             mc:Ignorable="d">

    <TextBlock x:Name="PossibleValue" Foreground="{ThemeResource CellPossiblesBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="PossiblesIndicatorStates">
                <VisualState x:Name="Horizontal">
                    <VisualState.Setters>
                        <Setter Target="PossibleValue.Foreground" Value="{ThemeResource PossiblesHorizontalBrush}"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Vertical">
                    <VisualState.Setters>
                        <Setter Target="PossibleValue.Foreground" Value="{ThemeResource PossiblesVerticalBrush}"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="None"/>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </TextBlock>
</UserControl>