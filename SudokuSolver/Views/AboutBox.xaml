<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="SudokuSolver.Views.AboutBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SudokuSolver.Views">

    <!-- left, top, right, bottom -->

    <Grid RowDefinitions="Auto,Auto,Auto,Auto" Margin="0,30,0,20">
        <Image x:Name="AboutImage" Width="62" Height="62" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" x:Name="AppNameTextBlock" FontSize="17" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="2" x:Name="VersionTextBlock" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="3" x:Name="HyperlinkTextBlock" HorizontalAlignment="Center"><Hyperlink NavigateUri="https://github.com/dhancock/sudokusolver"><Run x:Uid="GitHubRepository"/></Hyperlink></TextBlock>
    </Grid>

</UserControl>
