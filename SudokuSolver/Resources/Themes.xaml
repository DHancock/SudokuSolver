<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:Sudoku.Views">

    <ResourceDictionary.ThemeDictionaries>
        
        <ResourceDictionary x:Key="HighContrast">
            <!-- TODO: fix these... -->
            <SolidColorBrush x:Key="CalculatedCellValueBrush" Color="Gray"/>
            <SolidColorBrush x:Key="TrialCellValueBrush" Color="Gray"/>
            <SolidColorBrush x:Key="CellFillBrush" Color="{ThemeResource SystemColorBackgroundColor}"/>
            <SolidColorBrush x:Key="CellPossiblesBrush" Color="Gray"/>
            <SolidColorBrush x:Key="PossiblesHorizontalBrush" Color="Red"/>
            <SolidColorBrush x:Key="PossiblesVerticalBrush" Color="Green"/>
            <SolidColorBrush x:Key="MinorGridStroke" Color="{ThemeResource SystemAccentColor}"/>
            <SolidColorBrush x:Key="MajorGridStroke" Color="{ThemeResource SystemAccentColor}"/>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            
            <!-- sudoku grids -->
            <SolidColorBrush x:Key="CalculatedCellValueBrush" Color="Blue"/>
            <SolidColorBrush x:Key="TrialCellValueBrush" Color="DarkGreen"/>
            <SolidColorBrush x:Key="CellFillBrush" Color="Black"/>
            <SolidColorBrush x:Key="CellPossiblesBrush" Color="Gray"/>
            <SolidColorBrush x:Key="PossiblesHorizontalBrush" Color="Red"/>
            <SolidColorBrush x:Key="PossiblesVerticalBrush" Color="Green"/>
            <SolidColorBrush x:Key="MinorGridStroke" Color="Gray"/>
            <SolidColorBrush x:Key="MajorGridStroke" Color="LightGray"/>
            
            <!-- replace the black chrome default brush colour, the contrast is too low to see -->
            <SolidColorBrush x:Key="WindowCaptionForegroundDisabled" Color="Gray"/>

        </ResourceDictionary>

        <ResourceDictionary x:Key="Light">

            <!-- sudoku grids -->
            <SolidColorBrush x:Key="CalculatedCellValueBrush" Color="LightBlue"/>
            <SolidColorBrush x:Key="TrialCellValueBrush" Color="LightGreen"/>
            <SolidColorBrush x:Key="CellFillBrush" Color="White"/>
            <SolidColorBrush x:Key="CellPossiblesBrush" Color="LightGray"/>
            <SolidColorBrush x:Key="PossiblesHorizontalBrush" Color="Red"/>
            <SolidColorBrush x:Key="PossiblesVerticalBrush" Color="Green"/>
            <SolidColorBrush x:Key="MinorGridStroke" Color="Gray"/>
            <SolidColorBrush x:Key="MajorGridStroke" Color="Black"/>
            
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
